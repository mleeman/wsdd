[Unit]
Description=ONVIF WS-Discovery service (server side)
After=network-online.target

[Service]
Type=forking
WorkingDirectory=/var/lib/wsdd
PIDFile=/run/wsdd.pid
ExecStart=/usr/bin/wsdd \
	  --pid_file /run/wsdd.pid \
	  --if_name br0 \
    --type tdn:NetworkVideoTransmitter \
    --xaddr http://%%s:1000/onvif/device_service \
    --scope \"onvif://www.onvif.org/name/TelevicRelay \
	onvif://www.onvif.org/Profile/Streaming \
	onvif://www.onvif.org/location/ANY\"
TimeoutSec=4
Restart=always
RestartSec=2
StartLimitBurst=0

[Install]
WantedBy=multi-user.target
